<div id="container" class="row large-10 medium-11 small-12 large-centered medium-centered small-centered">



    <!-- SEARCH COLUMN -->
    <div class="search large-8 medium-8 small-8 columns">

        <form id="search-form" class="search">

          <label for="food-search">
            Please select a food: </label>
          <input type="text" id="food-search" name="food-choice" placeholder="Apple Pie">
          <input type="submit" value="Click!" class="button">
        </form>
<hr>
      <div class="searched" class="testing">searched</div>

    </div>



    <!-- SIDEBAR COLUMN -->
    <div class="profile large-4 medium-4 small-4 columns">

      <div class="heading">Basket</div>
      <div class="basket">basket stuff</div>

      <div class="heading">Health Stats</div>
        <div class="health-stats">

<!--      {{#stats}} -->
          <h4>Track Title:</h4>
          <li>track info</li>

<!--      {{#if percentages (this < 40% of desired) }} -->
          <div class="bar">
            <div class="barandgrowth red_bar" style="max-width: 30%">
              <div class="buffering"></div>
            </div>
          </div>

<!--      {{#elsif percentage > 70% of desired}} -->
          <div class="bar">
            <div class="barandgrowth green_bar" style="max-width: 100%">
              <div class="buffering"></div>
            </div>
          </div>

<!--      {{else}} -->
          <div class="bar">
            <div class="barandgrowth yellow_bar" style="max-width: 50%">
              <div class="buffering"></div>
            </div>
          </div>

<!--      {{/percentage}} -->
<!--      {{/stats}} -->

        </div>
      </div>
    </div>
  </div><!-- end of main row --><!-- end of container -->







<!-- TEMPLATES -->
<script id="food-template" type="text/x-handlebars-template">
  <ol>
  {{#hits}}
  	<div class="food_div">
	    <li class="food" food-id={{_id}}><b>{{fields.brand_name}}</b>: {{fields.item_name}}</li>
	    <ul>
	      <li>Calories: {{fields.nf_calories}}</li>
	      <li>Total Fat: {{fields.nf_total_fat}}</li>
	    </ul>
		</div>
  {{/hits}}
  </ol>
</script>

<script id="basket-template" type="text/x-handlebars-template">
  {{#oldfoodarray}}
  <div class="food_div">
      <li class="food" food-id={{API}}><b>{{fields.brand_name}}</b>: {{item_name}}</li>
      <ul>
        <li>Calories: {{nf_calories}}</li>
        <li>Total Fat: {{nf_total_fat}}</li>
      </ul>
    </div>
  {{/oldfoodarray}}
</script>
