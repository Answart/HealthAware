<H1>Welcome to HealthAware</h1>

<div class="search">
  <form id="search-form">
    Please select a food: <input type="text" name="food-choice">
    <input type="submit" value="Click!">
  </form>
</div>

<div class="profile">
  <div class="basket"></div>
</div>

<div class="container"></div>

<script id="food-template" type="text/x-handlebars-template">
  <ol>
    {{#objects}}
      <div class="food-div">
        <li class="food" food-id={{_id}}><b>{{objBrandName}}</b>: {{objName}}</li>
        <ul>
          {{#objFields}}
            <li>{{fieldName}}: {{fieldValue}}</li>
          {{/objFields}}
        </ul>
      </div>
    {{/objects}}
  </ol>
</script>


<script id="basket-template" type="text/x-handlebars-template">
  {{#basket}}
  <div class="food_div">
      <li class="food" food-id={{_id}}><b>{{fields.brand_name}}</b>: {{fields.item_name}}</li>
      <ul>
        <li>Calories: {{fields.nf_calories}}</li>
        <li>Total Fat: {{fields.nf_total_fat}}</li>
      </ul>
    </div>
  {{/basket}}
</script>
