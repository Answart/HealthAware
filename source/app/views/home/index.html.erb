<div id="container" class="row large-10 medium-11 small-12 large-centered medium-centered small-centered">

    <!-- SEARCH COLUMN -->
    <div class="search large-8 medium-8 small-12 columns">

        <form id="search-form" class="search">

          <label for="food-search">
            Please select a food: </label>
          <input type="text" id="food-search" name="food-choice" placeholder="Apple Pie">
          <input type="submit" value="Click!" class="gradient-blue">
        </form>
<hr>
      <div class="searched"></div>

    </div>



    <!-- SIDEBAR COLUMN -->
    <div class="profile large-4 medium-4 small-12 columns">

      <div class="heading">Basket</div>
      <div class="basket"></div>

      <div class="heading">Health Stats</div>
        <div class="health-stats"></div>
      </div>
    </div>
  </div><!-- end of main row --><!-- end of container -->


<!-- TEMPLATES -->
<script id="food-template" type="text/x-handlebars-template">

  <ul id="item-list">
  {{#objects}}
  	<div class="food_div">
	    <li class="food" food-id={{foodId}}>{{objName}}
  	    <ul id="nutrition-list">
          {{#objFields}}
            <li>{{fieldName}}: {{fieldValue}}</li>
          {{/objFields}}
        </ul>
      </li>
		</div>
  {{/objects}}
  </ul>
</script>


<script id="basket-template" type="text/x-handlebars-template">
  {{#oldfoodarray}}
  <div class="food_div">
    <div id="basket-list">
      <ul>
        <li class="food" food-id={{API}}>
          <a href=""><b>{{item_name}}</b></a>
        </li>
      </ul>
    </div>
  </div>
  {{/oldfoodarray}}
</script>


<script id="health-template" type="text/x-handlebars-template">

    <li class="food">
      <% if current_user %>
        <% if current_user.goals.count > 0 %>
          <ul><li>

            ITERATIVELY starts here:::<br>
            {{#ourArray}}

              <h4>{{name}}</h4>
              Goal: {{total}} {{unit}}<br>
              Aim: {{percentage}}<br>
              Limit? {{limit}}<br>
              <br>
              {{bar}}
              <hr>
            {{/ourArray}}
            <br>ITERATIVELY ends here:::

          </li></ul>
        <%end%>
      <%end%>

        {{! need: if percentage < 35% to give red bar }}

        {{! need: if percentage > 85% to give green bar }}
        <div class="bar">
          <div class="barandgrowth green_bar" style="max-width: 100%">
            <div class="buffering"></div>
          </div>
        </div>

        {{! need: if percentage is not either, give yellow bar }}
        <div class="bar">
          <div class="barandgrowth yellow_bar" style="max-width: 50%">
            <div class="buffering"></div>
          </div>
        </div>
        {{! end LIMIT stats }}
    </li>

    <hr>
    </h5>Hey <%=current_user.username%>!</h5>
    <h6>You account was created: <%="#{time_ago_in_words(current_user.created_at)} ago" %></h6>
<h6>You last add goals
<% if current_user.goals.count > 0 %> %><%="#{time_ago_in_words(current_user.goals.last.updated_at)} ago" %>
  <% end %>
</h6>
  </div>
</script>
