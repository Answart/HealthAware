<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<div id="container" class="row large-10 medium-12 small-12 large-centered medium-centered small-centered">


  <!-- MAIN COLUMN -->
  <div class="profile large-8 medium-8 small-12 columns">

    <h3 class="page-header">Health Stats</h3>
      <div class="health-stats"></div>

  </div>


  <!-- SIDEBAR COLUMN -->
  <div class="search large-4 medium-4 small-12 columns">

    <%= render partial: "food_search_form" %>
    <hr>

    <div class="searched"></div>

    <h3 class="page-header">Today's Basket</h3>
      <div class="basket"></div>

    <h3 class="page-header">Badges Achieved</h3>
      <div class="all_badges"></div>

  </div>

</div><!-- /#CONTAINER -->






<!-- TEMPLATES : move this to javascripts/templates-->
<script id="health-template" type="text/x-handlebars-template">

  <!-- Tabs -->
  <dl class="tabs" style="padding:2px; width:100%" data-tab>
    {{#allGoals}}
      <dd data-tabid="{{id}}"><a href="#panel-{{id}}">{{name}}</a></dd>
    {{/allGoals}}
  </dl>

  <ul>
    <!-- Tab panes -->
    <div class="tabs-content large-12 medium-12 small-12 columns">
      {{#allGoals}}
      <div class="content" id="panel-{{id}}">

        <div class="row large-12 medium-12 small-12 columns large-centered medium-centered small-centered">
          <li class="single-track_{{id}}">

          <div class="track-header">
            {{name}}  <span id="failure-message">{{failure}}</span> <span id="success-message">{{success}}</span>
            <button id={{id}} class="delete_goal delete-me" style="float:right"></button>
          </div>

          <div class="current-stats large-12 medium-12 small-12 columns">
            <ul>
              <li><b>Daily Goal</b>: {{limit}} {{target}} {{unit}}</li>
              <li><b>Current Total</b>: {{total}} {{unit}}</li>
              <li><b>Current</b>: {{percentage}}</li>
            </ul>
          </div>

          <div class="scales large-12 medium-12 small-12 columns">
            <div id="bar_{{id}}" class="bar"></div>
            <div id="js_container_{{id}}"></div>
          </div>
        </div>

      </div>
      {{/allGoals}}
    </div>
  </ul>
</div>
</script>


<script id="food-template" type="text/x-handlebars-template">
<ul id="item-list">
  {{#objects}}

    <div class="food_div">
      <li food-id={{foodId}}>
        {{objName}}
        <button id={{id}} class="add_food" style="float:right"></button>
          <ul id="nutrition-list">
            {{#objFields}}
              <li><b>{{fieldName}}</b>: {{fieldValue}}</li>
            {{/objFields}}
          </ul>
      </li>
    </div>

  {{/objects}}
</ul>
</script>


<script id="basket-template" type="text/x-handlebars-template">
  <ul>
    {{#oldfoodarray}}

      <li class="saved-item basket-item_{{id}}">
        <span class="large-9 medium-8 small-8 columns basket-name" >
          {{item_name}}
        </span>
        <span class="large-1 medium-1 small-1 columns basket-button">
          <button id={{id}} class="delete_food delete-me" style="float:right"></button>
        </span>
      </li>

    {{/oldfoodarray}}
  </ul>
</script>

<script id="badge-template" type="text/x-handlebars-template">
  {{#badges}}
  <div class="badges">
    <div class="row large-centered medium-centered small-centered ">
      <div class="large-2 medium-2 small-2 columns">
        <div class="badge-exceed"></div>
      </div>
      <div class="large-8 medium-6 small-6 columns">
        <b>Weekly Average</b><br>
        &nbsp;&nbsp;&nbsp;&nbsp;{{name}}<br>
        &nbsp;&nbsp;&nbsp;&nbsp;{{target}} {{unit}} consumed
      </div>
    </div>
  </div>
  {{/badges}}
</script>
